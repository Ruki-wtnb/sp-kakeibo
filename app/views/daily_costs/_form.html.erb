<%= form_with(model: @daily_cost) do |f| %>
    <%= f.label :pay_date, "日付" %>
    <%= f.date_field :pay_date, value: Date.today %>

    <%= f.label :category_id, "カテゴリ" %>
    <%= f.select :category_id, get_daily_categories %>

    <%= f.label :detail, "詳細" %>
    <%= f.text_field :detail %>

    <%= f.label :price, "値段" %>
    <%= f.number_field :price %>

    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
