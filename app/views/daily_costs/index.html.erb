<h1><%= Date.today.strftime("%Y年%m月") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table">
      <caption>カテゴリ合計</caption>
      <thead>
        <tr>
          <th scope="col">カテゴリ</th>
          <th scope="col">金額</th>
        </tr>
      </thead>
      <tbody>
        <tr class="info">
          <td>収入</td>
          <td><%= @income&.price %></td>
        </tr>
        <% @category_total.each do |c| %>
          <tr class="warning">
            <td><%= c.category.name %></td>
            <td><%= c.price %></td>
          </tr>
        <% end %>
        <tr class="success">
          <td>収支合計</td>
          <td><%= @monthly_total&.price %></td>
        </tr>
      </tbody>
    </table>
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">日付</th>
          <th scope="col">カテゴリ</th>
          <th scope="col">詳細</th>
          <th scope="col">金額</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @daily_costs.each do |d| %>
          <tr>
            <td><%= d.pay_date.strftime("%d日") %></td>
            <td><%= d.category.name %></td>
            <td><%= d.detail %></td>
            <td><%= d.price %></td>
            <td><%= link_to "編集", edit_daily_cost_path(d) %></td>
            <td><%= link_to "削除", d, data: { "turbo-method": :delete,
            turbo_confirm: "項目を削除しますか？"} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
